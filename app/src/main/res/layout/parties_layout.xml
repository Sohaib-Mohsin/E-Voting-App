<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/parties_bg"
        android:padding="10dp">

        <ProgressBar
            android:layout_centerVertical="true"
            android:id="@+id/item_progressbar"
            android:layout_width="25dp"
            android:layout_marginStart="10dp"
            android:layout_height="25dp"
            android:indeterminateTint="@color/white"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/party_image"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/party_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@id/vote"
            android:layout_toEndOf="@id/party_image"
            android:text="Part_Name"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/party_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/party_name"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@id/vote"
            android:layout_toEndOf="@id/party_image"
            android:text="Party_Description"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:background="@drawable/button_bg"
            android:backgroundTint="#21776F"
            android:text="VOTE NOW"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>